		<bar indent="1" text="Проект: " align="right"/>
		<cell bind="Проект" cols="2" outline="2">
			<edit type="ref" grow="1"/>
			<tool type="choosing"/>
		</cell>
		<row/>
		<row size="15" bold="1"/>
		<cell bind="Заголовок" align="center" cols="6"/>
