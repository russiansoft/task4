			<link reference="Место" type="list" text="🪑 Места"/>
		</row>
		<row/>
		<row/>
		<row/>
		<cell text="Версия 1.7" cols="2" color="606080"/>
		<row/>
	</form>

	<form name="main" role="Пользователь">
		<column width="2"/>
		<column width="4"/>
		<column width="60"/>

		<nest field="Аутентификация"/>

		<row/>
		<row/>
		<row/>
	</form>

	<format name="Дата" DLF="D"/>
	<format name="Время" NFD="2" NDS=":"/>
